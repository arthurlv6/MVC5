@model DataModel.Entities.Order

<div>
    <h5>Order Detail</h5>
    <hr />
    <div class="row">
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.CreateDate)
            @Html.DisplayFor(model => model.CreateDate)
        </div>
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.DeliveryFee)
            @Model.DeliveryFee.ToString("c")
        </div>
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.OtherFee)
            @Model.OtherFee.ToString("c")
        </div>
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.Discount)
            @Html.DisplayFor(model => model.Discount)
        </div>
    </div>
    <table class="table table-bordered table-condensed" style="background-color: blanchedalmond">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Quantity)
                </th>
                <th>
                    Amount
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Profile)
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.OrderProducts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>

                <td>
                    @((item.Price * item.Quantity).ToString("c"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile)
                </td>
            </tr>
        }
    </table>

</div>
